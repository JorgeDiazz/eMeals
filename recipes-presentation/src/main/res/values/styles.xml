<resources>

    <style name="AppTheme.Main" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <!--region Toolbars-->
    <style name="ToolbarStyle" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="titleTextColor">@color/blue_dark</item>
    </style>

    <style name="ToolbarStyle.SemiBold">
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance.SemiBold</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_size_subtitle_1</item>
    </style>

    <style name="ToolbarTitleTextAppearance.SemiBold">
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="AppToolbarTitleTextAppearance" parent="ToolbarTitleTextAppearance.SemiBold">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppToolbarTitleTextAppearance.Dark">
        <item name="android:textColor">@color/blue_dark</item>
    </style>

    <style name="ToolbarSubtitleStyle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/text_size_subtitle_3</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
    <!--endregion-->

    <style name="FullScreenDialogStyle">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>
