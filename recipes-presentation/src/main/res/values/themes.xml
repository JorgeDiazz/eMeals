<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">@color/blue_dark</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:actionButtonStyle">@style/ActionButton</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:drawablePadding">@dimen/action_button_padding_small_100</item>
    </style>

    <style name="MenuTextAppearance" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:lineSpacingExtra">@dimen/text_size_normal_100</item>
        <item name="android:textSize">@dimen/text_size_subtitle_2</item>
    </style>
</resources>